#!/usr/bin/env python3
"""
Development wrapper script for CrowdStrike Falcon Policy Audit CLI Tool.

This script allows running the tool from the repository without installing it.
All CLI logic is implemented in falcon_policy_scoring.__main__.py
"""

from falcon_policy_scoring.__main__ import main
import sys
from pathlib import Path

# Add the src directory to sys.path for development use
sys.path.insert(0, str(Path(__file__).parent.parent / "src"))

# Import and run the main function from the package


if __name__ == "__main__":
    main()
